# Render.com Environment Variables Template
# Copy these to your Render dashboard environment variables section

# Django Settings
SECRET_KEY=your-secure-secret-key-here-will-be-generated-by-render
DEBUG=False
ALLOWED_HOSTS=your-app-name.onrender.com

# Database (Render will provide this automatically when you add PostgreSQL)
# DATABASE_URL=postgresql://username:password@host:port/database

# Email Configuration (optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@academialink.com

# Render-specific settings
PYTHON_VERSION=3.9.16
WEB_CONCURRENCY=4