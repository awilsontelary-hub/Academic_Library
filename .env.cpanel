# cPanel Django Deployment Configuration

# Django Settings for cPanel hosting
DEBUG=False
SECRET_KEY=your-secret-key-here-change-this-to-something-secure-and-random
ALLOWED_HOSTS=your-domain.com,www.your-domain.com,127.0.0.1,localhost

# Database Configuration
# Option 1: Use SQLite (simple, no setup required)
USE_MYSQL=False

# Option 2: Use MySQL (recommended for production)
# Set USE_MYSQL=True and configure the following:
# DB_NAME=your_database_name
# DB_USER=your_database_user
# DB_PASSWORD=your_database_password
# DB_HOST=localhost
# DB_PORT=3306

# Email Configuration (optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com